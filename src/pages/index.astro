---
import Layout from "../layouts/Layout.astro";
import Header from "../components/landing/header.astro";
import Card from "../components/elements/Card.astro";
import Image from "../components/multimedia/Image.astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<Header />
	<div
		id="iservicios"
		class="col-span-1 flex flex-col justify-center mb-30 mt-5 gap-5 items-center max-w-3xl mx-auto"
	>
		<img
			src="../../public/undraw_services_dhxj.svg"
			alt=""
			class="max-w-50 max-h-50 aspect-1/0 object-cover"
		/>
		<h2 class="font-bold text-3xl">Nuestros servicios</h2>
	</div>
	<section
		class="max-w-5xl max-h-fit grid grid-cols-2 grid-rows-1 gap-4 m-auto p-5"
	>
		<Card
			Source="../../public/Almacena.jpg"
			styles="grid-row-2 col-span-2"
			link="/servicios"
			title="Mantenimiento de contenedores"
			content="Contamos con los mejores equipo y personal con excelente servicio"
		/>
		<Card
			Source="../../public/soldaduracontainer1.jpg"
			styles="grid-row-start"
			link="/servicios"
			title="Reparacion de contenedores"
			content="Contamos con los mejores equipo y personal con excelente servicio"
		/>
		<Card
			Source="../../public/Transporte.jpg"
			link="/servicios"
			styles="aspect-0.5"
			title="Reparacion de contenedores"
			content="Contamos con los mejores equipo y personal con excelente servicio"
		/>
	</section>
</Layout>
