---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/landing/header.astro";
import Card from "../../components/elements/Card.astro";
import es from "../../i18n/es";
import en from "../../i18n/en";
import type { Language } from "../../typeslang/language.type";
// Detectar idioma por query ?lang=xx
const url = new URL(Astro.request.url);
export function getStaticPaths() {
	return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

export const defaultRedirect = "/es";

const lang = Astro.params.lang as Language;
const translations = { es, en };
const t = translations[lang];

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<Header />
	<div
		id="iservicios"
		class="col-span-1 flex flex-col justify-center mb-30 mt-5 gap-5 items-center max-w-3xl mx-auto"
	>
		<img
			src="../../public/undraw_services_dhxj.svg"
			alt=""
			class="max-w-50 max-h-50 aspect-1/0 object-cover"
		/>
		<h2 class="font-bold text-3xl"></h2>
	</div>
	<section
		class="max-w-5xl max-h-fit grid grid-cols-1 md:grid-cols-2 grid-rows-1 gap-4 m-auto p-5"
	>
		<Card
			Source="https://cdn.pixabay.com/photo/2020/03/30/00/09/sugar-4982660_1280.jpg"
			styles="grid-row-2 col-span-1 md:col-span-2"
			link="/servicios"
			title={t.card["title.recolection"]}
			content={t.card["description.recolection"]}
		/>
		<Card
			Source="https://cdn.pixabay.com/photo/2017/09/13/17/50/spraying-sugar-cane-2746350_1280.jpg"
			styles="grid-row-start"
			link="/servicios"
			title={t.card["title.irrigation"]}
			content={t.card["description.irrigation"]}
		/>
		<Card
			Source="https://cdn.pixabay.com/photo/2023/03/31/14/52/rice-field-7890204_1280.jpg"
			link="/servicios"
			styles="aspect-0.5"
			title={t.card["title.person"]}
			content={t.card["description.person"]}
		/>
	</section>
</Layout>
