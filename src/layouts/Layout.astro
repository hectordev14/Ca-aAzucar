---
import MyNavBar from "../components/landing/myNavBar.astro";
import "../styles/global.css";
import Footer from "../components/landing/Footer.astro";
import es from "../i18n/es";
import en from "../i18n/en";


 async function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

---

<!doctype html>
<html>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="/public/logoPLCIALTDA.webp" />
		<link
			rel="stylesheet"
			href="https://cdn-hoverme.netlify.app/hoverme/1.0.4/hoverme.css"
		/>

		<title></title>
	</head>
	<body>
		<div class="min-w-sm m-0 font-sans gap-1">
			<div class="mb-20 w-full">
				<MyNavBar />
			</div>
			<slot />
			<Footer />
			<a
				href="https://wa.me/+50589371498"
				target="_blank"
				class="jello groww z-50 min-h-10 min-w-10 fixed bottom-5 right-5 hover:scale-1.1"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="60"
					height="60"
					viewBox="0 0 24 24"
					fill="none"
					stroke="#00a321"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"
					><path stroke="none" d="M0 0h24v24H0z" fill="none"
					></path><path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"
					></path><path
						d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
					></path></svg
				>
			</a>
		</div>
		<script src="../../node_modules/flyonui/flyonui.js"></script>
	</body>
</html>
<script>
	const select = document.getElementById(
		"lang-select",
	) as HTMLSelectElement | null;

	select?.addEventListener("change", ({ target }) => {
		const selectedLang = (target as HTMLSelectElement).value;
		const newPath = window.location.pathname.replace(
			/^\/(es|en)/,
			`/${selectedLang}`,
		);
		window.location.pathname = newPath;
	});
</script>
<style>
	:root {
		--default-color: #1e1ee8 !important; /*Esto solo se aplica al hover del navbar. color principal */
		--default-back: #eef0f4 !important; /*color de fondo*/
		--font-color: #fff !important; /*color de la fuente*/
	}
</style>
