---
import A from "../elements/Alink.astro";
import Logo from "../multimedia/logo.astro";

const url = new URL(Astro.request.url);
const myPaht = url.pathname;

const maintcont = () => (myPaht === "/" ? "maincont" : "");

/* ("maincont z-50 x-auto w-full min-h-fit flex justify-center items-center sticky top-0 py-1.5"); */
---

<nav
    id="navBar"
    class=`${maintcont()} z-50 shadow-lg x-auto w-full min-h-fit flex flex-wrap justify-center items-center gap-5 font-bold py-1.5 fixed top-0 bg-white `
>
    <Logo />
    <h2 class="text-blue-800
			font-bold
			mr-1.5">PINEDA LEIVA Y CIA LTDA</h2>
    <A styless="hvr-underline-from-center text-lg" texto="Inicio" link="/" />
    <A styless="hvr-underline-from-center text-lg" texto="Servicios" link="#" />
    <A
        styless="hvr-underline-from-center text-lg"
        texto="Nosotros"
        link="/about"
    />
</nav>

