---
import Video from "../multimedia/video.astro";
import Button from "../elements/Button.astro";
import Arrows from "../elements/Arrows.astro";
import es from "../../i18n/es";
import en from "../../i18n/en";
import type { Language } from "../../typeslang/language.type";


const lang = Astro.params.lang as Language;
const translations = { es, en };
const t = translations[lang];

const styles = Astro.props;
---

<header class=`${styles}w-full h-screen`>
    <div class="w-full
    flex
    justify-center
    items-center
    
    z-30">
    </div>
    <div class="w-full min-h-90 flex items-center">
        <div class="z-0">
            <Video />
        </div>
        <div
            class="overlay w-full h-full absolute top-0 left-0 z-10 bg-black/55 mix-blend-overlay"
        >
        </div>

        <div
            class="z-40 flex flex-col mx-auto justify-center min-w-full h-full"
        >
            <p
                class="text-3xl max-w-3xl flex-wrap text-center m-auto text-white font-bold"
            >
                <span>{t.header["header.quote"]}</span>
            </p>
            <div class="m-auto mt-5">
                <Button styles="rounded-sm p-2" title={t.header["button.contact"]} />
            </div>
            <Arrows title="Explorar" />
        </div>
    </div>
</header>
