---
import A from "../elements/Alink.astro";
import Logo from "../multimedia/logo.astro";
import Button from "../elements/Button.astro";

const url = new URL(Astro.request.url);
const myPaht = url.pathname;

const maintcont = () => (myPaht === "/" ? "maincont" : "");
---

<!-- shadow-lg x-auto w-full min-h-fit flex flex-wrap justify-center items-center
gap-5 font-bold py-1.5 fixed top-0 bg-white -->
<nav
    class=`${maintcont()} z-50 navbar-center  shadow-sm w-full
 font-bold fixed top-0  bg-white text-black`
>
    <div class="w-full md:flex md:items-center md:gap-2">
        <div class="w-full items-center flex justify-evenly">
            <div
                class="navbar-start flex items-center justify-between max-md:w-full gap-3.5"
            >
                <Logo />
                <a class="w-full font-bold text-blue-800 no-underline" href="/">
                    PINEDALEIVA Y CIA LTDA</a
                >

                <!-- icono para menu en modo dispositivo celular o menor a 760px -->
                <div class="md:hidden mr-5">
                    <button
                        type="button"
                        class="collapse-toggle btn btn-outline btn-secondary btn-sm btn-square"
                        data-collapse="#default-navbar-collapse"
                        aria-controls="default-navbar-collapse"
                        aria-label="Toggle navigation"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="#00047a"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"
                            ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                            ></path><path d="M4 6l16 0"></path><path
                                d="M4 12l16 0"></path><path d="M4 18l16 0"
                            ></path></svg
                        >
                    </button>
                </div>
            </div>
        </div>

        <!-- elementos para navegar, aqui se define el stilo y se veran igual en cualquier
        tamaÃ±o de pantalla -->
        <div
            id="default-navbar-collapse"
            class="md:navbar hidden grow basis-full overflow-hidden transition-[height] duration-300 max-md:w-full"
        >
            <ul class="flex justify-evenly p-0 text-base max-md:mt-2 gap-10">
                <li>
                    <A
                        styless="hvr-underline-from-center text-xl"
                        texto="Inicio"
                        link="/"
                    />
                </li>
                <li>
                    <A
                        styless="hvr-underline-from-center text-xl"
                        texto="Servicios"
                        link="#"
                    />
                </li>
                <li>
                    <A
                        styless="hvr-underline-from-center text-xl"
                        texto="Nosotros"
                        link="/about"
                    />
                </li>
            </ul>
        </div>
    </div>
</nav>
