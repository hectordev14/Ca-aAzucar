---
interface Props {
    title?: string;
    content?: string;
    styles?: string;
    Source?: string;
    Alter?: string;
    link?: string;
}
const { title, content, styles, Alter, Source, link } = Astro.props;
---

<article
    class=`${styles} relative flex flex-col gap-1 min-w-fit max-h-fit shadow-lg  rounded-xl`
>
    <img
        src={Source}
        alt={Alter}
        class="z-10 min-w-full min-h-full rounded-xl"
    />
    <a
        href=`${link}`
        class="overlay w-full h-fit p-5 flex flex-col gap-5 absolute bottom-0 left-0 z-20 rounded-b-xl bg-black/55"
    >
        <p class="text-2xl z-30 font-bold text-md top-0 text-white">
            {title}
        </p>
        <p class="z-30 text-white font-bold top-0 text-md">{content}</p>
    </a>
</article>
